<%= form_with(model: todo, local: true) do |form| %>
  <% if todo.errors.any? %>
    <div class="alert alert-danger">
      <h3><%= pluralize(todo.errors.count, "error") %></h3>
      <ul>
      <% todo.errors.full_messages.each do |message| %>
        <li class="text-left"><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <div class="row">
    <div class="col-sm-6 text-right">
      <%= form.label :task %> <br>
      <%= form.label :task_description %>      
    </div>
    <div class="col-sm-6 text-left">
      <%= form.text_field :task, id: :todo_task %> 
      <%= form.text_field :task_description, id: :todo_task %>
    </div>
    </div>
  </div>

  <div class="actions">
    <%= form.submit class:"btn btn-success" %>
  </div>
<% end %>
