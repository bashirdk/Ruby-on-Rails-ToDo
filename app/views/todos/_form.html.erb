<%= form_with(model: todo, local: true) do |form| %>
  <% if todo.errors.any? %>
    <div class="alert alert-danger">
      <h3><%= pluralize(todo.errors.count, "error") %> prevented this task from being added:</h3>

      <ul class="">
      <% todo.errors.full_messages.each do |message| %>
        <li class="text-left"><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="text-center">
  <div class="field">
    <%= form.label :task %>
    <%= form.text_field :task, id: :todo_task %>
  </div>
  </div>

  <div class="actions">
    <%= form.submit class:"btn btn-success" %>
  </div>
<% end %>
